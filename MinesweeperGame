package com.javarush.games.minesweeper;

import com.javarush.engine.cell.*;

import java.util.ArrayList;
import java.util.List;

public class MinesweeperGame extends Game {
    private static final int SIDE = 9;
    private GameObject[][] gameField = new GameObject[SIDE][SIDE];
    private int countMinesOnField;
    private static final String MINE = "\uD83D\uDCA9";

    @Override
    public void initialize() {
        setScreenSize(SIDE, SIDE);                                       //размер поля
        createGame();
    }

    private void createGame() {
        for (int y = 0; y < SIDE; y++) {
            for (int x = 0; x < SIDE; x++) {
                boolean isMine = getRandomNumber(10) < 1;          //рандомные мины
                if (isMine) {
                    countMinesOnField++;
                }
                gameField[y][x] = new GameObject(x, y, isMine);         //цвет всего поля
                setCellColor(x, y, Color.WHITE);
            }
        }
        countMineNeighbors();
    }

    private List<GameObject> getNeighbors(GameObject gameObject) {                  // соседи мины
        List<GameObject> result = new ArrayList<>();
        for (int y = gameObject.y - 1; y <= gameObject.y + 1; y++) {
            for (int x = gameObject.x - 1; x <= gameObject.x + 1; x++) {
                if (y < 0 || y >= SIDE) {
                    continue;
                }
                if (x < 0 || x >= SIDE) {
                    continue;
                }
                if (gameField[y][x] == gameObject) {
                    continue;
                }
                result.add(gameField[y][x]);
            }
        }
        return result;
    }

    private void countMineNeighbors() {
        for (int y = 0; y < SIDE; y++) {
            for (int x = 0; x < SIDE; x++) {
                GameObject gameObject = gameField[y][x];
                if (!gameObject.isMine) {
                    for (GameObject neighbor : getNeighbors(gameObject)) {
                        if (neighbor.isMine) {
                            gameObject.countMineNeighbors++;
                        }
                    }
                }
            }
        }
    }

    private void openTile(int a, int b) {

        GameObject gameObject = gameField[a][b];

//        if (!gameObject.isOpen){
            if (gameObject.isMine) {
                setCellValue(a, b, MINE);
                setCellColor(a, b, Color.GOLD);

            } else{

                setCellColor(a, b, Color.GREEN);
                setCellNumber(a, b, gameObject.countMineNeighbors);
                gameObject.isOpen = true;
            }
//            gameObject.isOpen = true;
//            System.out.println(gameObject.isOpen);
//        }



    }


    @Override
    public void onMouseLeftClick(int a, int b) {
        openTile(a, b);
    }
}
